<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-3">Lista de Alumnos</h3>
        {{#if alumnos}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Movil</th>
                        <th scope="col">email</th>
                        <th scope="col">Fecha de Nacimiento</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each alumnos}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{lastname}}</td>
                            <td>{{address}}</td>
                            <td>{{phone}}</td>
                            <td>{{email}}</td>
                            <td>{{birthdate}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-3">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-3">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="7">REGISTRO DE ALUMNOS</td>
                    </tr>
                </tfoot>
            </table>
        {{else}}
            <div class="container-fluid p-4">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card text-center mt-auto" style="width: 100%;">
                            <div class="card-header">
                                <h3>Crear Alumno</h3>
                            </div>
                            <div class="card-body">
                                <p>Presionar para registrar un alumno en la Aplicacion</p>
                                <a href="/add" class="btn btn-primary">Ir a crear</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</div>